{
    "name": "vend-site/opencart",
    "description": "OpenCart e-commerce platform",
    "type": "project",
    "license": "GPL-3.0",
    "require": {
        "php": ">=7.4"
    },
    "require-dev": {
        "phpunit/phpunit": "^12",
        "friendsofphp/php-cs-fixer": "^3.0"
    },
    "autoload": {
        "classmap": [
            "public_html/system/engine/",
            "public_html/system/library/"
        ]
    },
    "scripts": {
        "cs-check": "php-cs-fixer fix --dry-run --diff",
        "cs-fix": "php-cs-fixer fix",
        "test": "phpunit"
    },
    "config": {
        "sort-packages": true,
        "platform": {
            "php": "7.4"
        }
    }
}
